<%= render 'shared/content_title', title: 'Sign In' %>
<div class = 'well'>
  <%= form_tag '/login' do %>  
    <div class='form-group'>
      <%= label_tag :username %>
      <%= text_field_tag :username %>
    </div>

    <div class='form-group'>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
  
    <br/>
    <%= submit_tag 'Login', class: 'btn btn-primary' %>
  <% end %>
</div>